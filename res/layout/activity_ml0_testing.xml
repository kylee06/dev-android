<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ML0TestingActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검사 메뉴" />

    <Button
        android:id="@+id/button_testing_malicious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:text="악성코드 검사" />

    <Button
        android:id="@+id/button_testing_security_vulnerability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_testing_malicious"
        android:layout_alignRight="@+id/button_testing_malicious"
        android:layout_below="@+id/button_testing_malicious"
        android:text="보안취약성 점검" />

    <Button
        android:id="@+id/button_logview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_testing_security_vulnerability"
        android:layout_alignRight="@+id/button_testing_security_vulnerability"
        android:layout_below="@+id/button_testing_security_vulnerability"
        android:text="로그 보기" />

</RelativeLayout>